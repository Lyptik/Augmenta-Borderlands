<!-- Global app settings -->
<appSettings>
    <fullscreen>true</fullscreen> 					<!-- does Borderlands start in fullscreen or not (true or false) -->
    <showStartMenu>true</showStartMenu> 			<!-- show start menu at Borderlands launch (true or false) -->
    <showCursor>false</showCursor> 					<!-- show cursor -->
    <audioPath>loops/</audioPath> 					<!-- path to the audio loops (relative to data folder) -->
    <bufferSize>1024</bufferSize> 					<!-- buffer size -->

    <!-- Augmenta relative settings -->
    <oscPort>12000</oscPort> 							<!-- OSC port for Augmenta -->
    <syphonServerName>Borderlands</syphonServerName>

    <!-- Interactive area : scale augmenta data received to the specified area
         to have some free space around and store safely the sounds you don't want to play -->
    <createSoundsOutside>true</createSoundsOutside> 		<!-- if set to true, the sounds will be created outside the interactive area defined below
    															 on Borderlands launch. Else (false), the sounds are created randomly in the window. -->
    <interactiveAreaOriginX>0.2</interactiveAreaOriginX> 	<!-- origin on X axis for interactive area, relative to window size (0 = left, 1 = right) -->
    <interactiveAreaOriginY>0.1</interactiveAreaOriginY> 	<!-- origin on Y axis for interactive area, relative to window size (0 = top, 1 = bottom) -->
    <interactiveAreaWidth>0.6</interactiveAreaWidth> 		<!-- width of interactive area, relative to window size (0 = no size, 1 = screen width) -->
    <interactiveAreaHeight>0.8</interactiveAreaHeight> 		<!-- heigth interactive area, relative to window size (0 = no size, 1 = screen height) -->

    <!-- Voice limiter function : distribute voices in scene according to the voicesLimit to prevent sound crashes -->
    <useVoiceLimiter>true</useVoiceLimiter> 		<!-- enable the voice limiter function (true or false) -->
    <voicesLimit>110</voicesLimit> 					<!-- limit the total number of voices in the scene. Use this parameter to prevent sound crashes -->
    <maxVoicesPerCloud>10</maxVoicesPerCloud> 		<!-- maximum number of voices per cloud when voiceLimiter is active -->
    <maxTrackedPeople>500</maxTrackedPeople> 		<!-- restrict number of people tracked to prevent performance loss -->
</appSettings>

<!-- Default settings for each cloud -->
<cloudSettings>
    <numVoices>4</numVoices> 						<!-- voice number -->
    <duration>500</duration> 						<!-- duration (ms) -->
    <overlap>1.0</overlap> 							<!-- overlap (between 0 and 1) -->
    <pitch>1.0</pitch> 								<!-- pitch -->
    <windowType>HANNING</windowType> 				<!-- window type (HANNING, TRIANGLE, EXPDEC, REXPDEC, SINC, RANDOM) -->
    <grainDirection>RANDOM</grainDirection> 		<!-- grain direction (FORWARD, BACKWARD, RANDOM) -->
    <spatializationMode>STEREO</spatializationMode> 	<!-- spatialization mode (UNITY, STEREO, AROUND) -->
    <pitchLFOFreq>0.01</pitchLFOFreq> 				<!-- playback rate LFO frequency -->
    <pitchLFOAmount>0.0</pitchLFOAmount> 			<!-- playback rate LFO amplitude -->
    <volume>0.0</volume> 							<!-- cloud volume in dB -->
</cloudSettings>
